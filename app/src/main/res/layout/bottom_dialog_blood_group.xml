<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/familyDialog"
    style="@style/CustomBottomSheetDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners_layout"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_o_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="O+ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_o_positive"
        android:background="@color/theme_background_light"/>

    <TextView
        android:id="@+id/tv_o_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="O-ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/theme_background_light"
        app:layout_constraintTop_toBottomOf="@id/tv_o_negative" />

    <TextView
        android:id="@+id/tv_a_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="A+ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_a_positive"
        android:background="@color/theme_background_light"/>

    <TextView
        android:id="@+id/tv_a_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="A-ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_a_negative"
        android:background="@color/theme_background_light"/>

    <TextView
        android:id="@+id/tv_b_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="B+ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider4" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/theme_background_light"
        app:layout_constraintTop_toBottomOf="@id/tv_b_positive" />

    <TextView
        android:id="@+id/tv_b_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="B-ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider5" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_b_negative"
        android:background="@color/theme_background_light"/>

    <TextView
        android:id="@+id/tv_ab_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="AB+ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider6" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ab_positive"
        android:background="@color/theme_background_light"/>

    <TextView
        android:id="@+id/tv_ab_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="AB-ve"
        android:textColor="@color/theme_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/divider7" />


</androidx.constraintlayout.widget.ConstraintLayout>