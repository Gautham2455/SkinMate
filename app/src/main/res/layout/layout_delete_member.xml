<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_delete_24_member"
            android:padding="8dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/do_you_want_to_delete"
            android:textAlignment="center"
            android:textColor="@color/theme_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="Poppins SemiBold"/>

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="70dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/theme_text"
            android:textSize="15sp"
            android:fontFamily="Poppins Medium"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/ll"
        app:layout_constraintEnd_toEndOf="@id/ll"
        app:layout_constraintBottom_toBottomOf="@id/ll"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_No"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            app:cornerRadius="0dp"
            android:text="@string/no"
            android:layout_marginEnd="5dp"
            app:backgroundTint="@color/theme_button"
            android:layout_weight="1"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yes"
            style="@style/Buttoncardviewstyle"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text="@string/yes"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            app:backgroundTint="@color/theme_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>