<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corners_layout"
    style="@style/CustomBottomSheetDialog">

    <TextView
        android:id="@+id/tv_edit_family_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Family Member"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:fontFamily="Poppins SemiBold"
        android:textColor="@color/theme_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:id="@+id/appointment_option_divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_background_light"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_family_member"/>

    <TextView
        android:id="@+id/tv_delete_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Member"
        android:gravity="center_horizontal"
        android:fontFamily="Poppins SemiBold"
        android:textSize="24sp"
        android:textColor="@color/red"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appointment_option_divider1"/>

</androidx.constraintlayout.widget.ConstraintLayout>