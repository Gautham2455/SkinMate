<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reached_layout"
            android:layout_width="370dp"
            android:layout_height="99dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay_card_custom_corners_tr_bl"
            app:strokeColor="@color/theme_background_light"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/loc_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/loc" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/you_have_reached"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/skinmate"
                android:textSize="12sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            app:cardBackgroundColor="@color/theme_background_dark"
            android:layout_marginTop="30dp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay_card_custom_corners">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="23dp"
                android:layout_marginStart="21dp"
                android:src="@drawable/info"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="69dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/please_wait_for_your_turn_to_walk_up_to_the_waiting_room"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_appointment_summary"
            android:layout_width="370dp"
            android:layout_height="280dp"
            android:layout_marginStart="20dp"
            app:shapeAppearance="@style/ShapeAppearanceOverlay_card_custom_corners"
            android:layout_marginTop="30dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_background_light">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_appointment_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/appointment_summary"
                android:textColor="@color/theme_background_dark"
                android:textSize="13sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/self_text_layout"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/self"
                android:textAlignment="center"
                android:textColor="@color/theme_background_light"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_baseline_circle_24" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_treatment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/ipl_laser_treatment"
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_baseline_circle_24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/poppins_medium"
                android:text="ID - "
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_ID_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/poppins_medium"
                android:text="123456"
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/doctor"
                android:textColor="@color/theme_color_dark"
                android:textSize="13sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="129dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="135dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/dr_andrew_williams_md_faad_fasms"
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/checkin_bitmap"
                android:layout_marginStart="250dp"
                android:layout_marginTop="105dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Date &amp; Time"
                android:textColor="@color/theme_color_dark"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_baseline_circle_24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="215dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/_15_jun_2020"
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_baseline_circle_24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="240dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="235dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/_3_00_pm"
                android:textColor="@color/theme_background_light"
                android:textSize="13sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/in_the_interim_you_can_complete_checkin"
            android:textColor="@color/theme_text"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_fill"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/check_in"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:backgroundTint="@color/theme_button" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>